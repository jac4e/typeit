{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "plugins": [
      {
        "transform": "ts-transformer-keys/transformer"
      },
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}