{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": ["es6"],
        "declaration": true,
        "outDir": "./lib",
        "moduleResolution": "node",
        "strict": true,
        "plugins": [
            {
              "transform": "typescript-json/lib/transform",
            },
            { "transform": "ts-transformer-keys/transformer" }
          ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
}